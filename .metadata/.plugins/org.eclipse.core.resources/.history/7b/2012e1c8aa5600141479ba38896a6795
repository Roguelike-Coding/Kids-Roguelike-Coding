package com;

import javax.swing.JLayeredPane;

public class EntityMoveToolkit {
	public static Map moveUp(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX(), entity.getY()-1);
		return null;
		
	}
	public Map moveDown(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX(), entity.getY()+1);
		return null;
		
	}
	public Map moveLeft(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()-1, entity.getY());
		return null;
	
	}
	public Map moveRight(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()+1, entity.getY());
		return null;
	
	}
	public Map moveUpRight(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()+1, entity.getY()-1);
		return null;
	
	}
	public Map moveUpLeft(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()-1, entity.getY()-1);
		return null;
	
	}
	public Map moveDownRight(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()+1, entity.getY()+1);
		return null;
	
	}
	public Map moveDownLeft(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()-1, entity.getY()+1);
		return null;
	
	}
	
}
