package com;

import javax.swing.JLayeredPane;

public class EntityMoveToolkit {
	public static EntityLabel moveUp(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX(), entity.getY()-1);
		for(int i=0;i<map.position.length;i++){
			for(int j=0;j<map.position[0].length;i++){
				
				if(map.terrain[i][j].getName().equals("Road")){
					
				}
			}
		}
		//pane.setLayer(entity, 0, arg2);
		return entity;
		
	}
	public static EntityLabel moveDown(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX(), entity.getY()+1);
		return entity;
		
	}
	public static EntityLabel moveLeft(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()-2, entity.getY());
		return entity;
	
	}
	public static EntityLabel moveRight(Map map,EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()+2, entity.getY());
		return entity;
	
	}
}
