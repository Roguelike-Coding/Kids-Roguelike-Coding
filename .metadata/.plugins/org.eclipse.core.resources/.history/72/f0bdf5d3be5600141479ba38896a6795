package com;

import javax.swing.JLayeredPane;

public class EntityMoveToolkit {
	public static EntityLabel moveHorizontal(EntityLabel entity, JLayeredPane pane,int i){
		entity.setLocation(entity.getX()+i, entity.getY());
		return entity;
		
	}
	/*public static EntityLabel moveDown(EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX(), entity.getY()+1);
		return entity;
		
	}*/
	public static EntityLabel moveVertical(EntityLabel entity, JLayeredPane pane,int i){
		entity.setLocation(entity.getX(), entity.getY()-i);
		return entity;
	
	}
	/*
