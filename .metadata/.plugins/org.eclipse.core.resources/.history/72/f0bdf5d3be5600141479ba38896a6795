	public static EntityLabel moveUpRight(EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()+1, entity.getY()-1);
		return entity;
	
	}
	public static EntityLabel moveUpLeft(EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()-1, entity.getY()-1);
		return entity;
	
	}
	public static EntityLabel moveDownRight(EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()+1, entity.getY()+1);
		return entity;
	
	}
	public static EntityLabel moveDownLeft(EntityLabel entity, JLayeredPane pane){
		entity.setLocation(entity.getX()-1, entity.getY()+1);
		return entity;
	
	}
